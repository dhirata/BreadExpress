<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Role</th>
      <th>Active</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user_path(user) %></td>
        <td><%= user.role %></td>
        <td>
          <%= user.active %>
        </td>
        <td>
          <%= link_to(edit_user_path(user), class: 'button') do %>
            &nbsp;Edit
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @users, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
<br />