<div class="form-actions">
	<% if @user.role? :admin %>
	  <%= link_to(users_path, class: 'button') do %>
	  &nbsp;Display All Users
	  <% end %>
	  &nbsp;&nbsp;
  <% end %>
  <%= link_to(edit_user_path(@user), class: 'button') do %>
    &nbsp;<%= "Edit #{@user.username}" %>
  <% end %>
  <% if @user.role? :admin %>
	  &nbsp;&nbsp;
	  <%= link_to(user_path(@user), method: 'delete', data: {confirm: "Are you sure you want to permanently delete #{@user.username}"}, class: 'button alert') do %>
	    &nbsp;<%= "Delete #{@user.name}" %>
	  <% end %>
  <% end %>
</div>