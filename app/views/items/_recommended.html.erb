<% if @recommended_items.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
  		<th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @recommended_items.each do |ri| %>
        <tr>
          <td><%= link_to ri.name, item_path(ri) %></td>
          <td><span style="color: green"><%= number_to_currency ri.current_price %></span></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>