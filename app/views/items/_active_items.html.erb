<% if @active_items.empty? %>
  <h4>No active customers at this time.</h4>
<% else %>
  <h4>Active Items</h4>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="225">Name</th>
        <th width="125">Category</th>
        <th width="200">Price</th>
        <th> &nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @active_items.each do |item| %>
        <tr>
          <td><%= link_to item.name, item_path(item) %></td>
          <td><%= item.category %></td>
          <td><%= number_to_currency item.current_price %></td>
          <td><%= link_to(edit_item_path(item), class: 'button') do %>
            &nbsp;Edit&nbsp;
          <% end %>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<p>&nbsp;</p>