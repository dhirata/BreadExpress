  <nav class="top-bar" data-topbar>
    <section class="top-bar-section">
      <ul class="left">
        <!-- link to home -->
        <% if logged_in? && current_user.role?(:admin) %>
        <li><%= link_to "Home", home_path %></li>
        <% end %>
        <% if !logged_in? %>
          <li><%= link_to "View Menu", items_path %></li>
        <% end %>
        <% if logged_in? && current_user.role?(:customer) %>
          <!-- options for items -->
          <li><%= link_to "Shop", items_path %></li>

          <!-- options for addresses -->
          <li class="has-dropdown">
            <%= link_to "My Account", users_path %>
            <ul class="dropdown">
              <li><%= link_to "My Orders", orders_path %></li>
              <li><%= link_to "My Information", customers_path %></li>
              <li><%= link_to "My Addresses", addresses_path %></li>
            </ul>
          </li>

        <% end %>

        <!-- ADMIN ONLY OPTIONS -->
        <% if logged_in? && current_user.role?(:admin) %>
          <li><%= link_to "Shop", items_path %></li>

