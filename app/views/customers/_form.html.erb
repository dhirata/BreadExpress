<%= simple_nested_form_for @customer, :html => { :class => 'form-horizontal' } do |customer_form| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Customer</legend>
      <%= render :partial => "customer_fields", :locals => { :f => customer_form } %>
  </fieldset>

    <div class="span6">
      <fieldset>
        <legend>Related User</legend>
            <%= customer_form.simple_fields_for :users do |user_form| %>
              <%= render :partial => "user_fields", :locals => { :f => user_form } %>
            <% end %> 
        </fieldset>
      </div>

    <div class="form-actions">
      <%= customer_form.submit nil, :class => 'button' %>
      <%= link_to 'Cancel', customers_path, :class => 'button alert' %>
    </div>
<% end %>